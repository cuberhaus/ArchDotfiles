chrome_install () {
    wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
    sudo apt install ./google-chrome-stable_current_amd64.deb
    rm google-chrome-stable_current_amd64.deb
}

emacs_install () {
    $apt emacs-gtk              # Emacs
    # Doom
    $apt git ripgrep            # required dependencies
    $apt tar fd-find clang      # optional dependencies
}

i3_install () {
    # Add repository and refresh apt
    sudo add-apt-repository ppa:kgilmer/speed-ricer
    sudo apt-get update
    $apt i3-gaps
    # Dependancies
    $apt alsa-utils
    $apt compton 
    $apt conky 
    $apt feh 
    $apt flameshot 
    $apt i3blocks 
    $apt kitty 
    $apt picom
    $apt player-ctl 
    $apt pulseaudio
    $apt pulseaudio 
    $apt pulseaudio-equalizer
    $apt python-dbus 
    $apt rofi 
    $apt udiskie
    $apt xbacklight
    $apt xdotool
    $apt xfce4-clipman
    $apt xss-lock
    $apt yad
    $apt zenity

    # Add current user to group video, type groups to see which groups you are in
    sudo usermod -a -G video $LOGNAME
    # Light setup | Enables brightness controls
    cd $HOME
    git clone https://github.com/haikarainen/light
    cd light
    ./autogen.sh
    ./configure && make
    sudo make install
    ./configure --with-udev && make
    sudo make install
}

snaps_install() {
    #sudo snap install ao
    #sudo snap install atom --classic
    #sudo snap install android-studio --classic
    sudo snap install discord
    sudo snap install skype --classic
    sudo snap install slack --classic
    sudo snap install spotify
    sudo snap install walc
}

steam_install () {
    wget https://repo.steampowered.com/steam/archive/precise/steam_latest.deb
    sudo apt install ./steam_latest.deb
    rm steam_latest.deb
}

vim_install () {
    cd $HOME 
    vim +PlugInstall +qall                      # Update plugins
    bash $HOME/.local/scripts/ycm.sh                      # Vim YouCompleteMe plugin install
    sudo npm install -g neovim                  # npm on neovim
    python3 -m pip install --user --upgrade pynvim # Python for neovim
    sudo gem install neovim                     # Gem for neovim
}

optional() {
    # $apt texlive-full doxygen   # Doxygen
    # $apt chromium-browser       # Web browser
    # $apt virtualbox-qt          # Virtual machines
}
