### INSTALLATION
sudo apt-get update; sudo apt-get full-upgrade  # Update
install_preparation
echo "#! /bin/sh
export DISTRO=ubuntu" > $HOME/.config/distro
brew_install

### ONLY CHANGE FROM HERE ON
base_install
vim_install
emacs_install
windows_install

