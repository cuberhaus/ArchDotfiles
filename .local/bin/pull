#!/bin/bash

pull() {
    if [[ -d "$1" ]]
    then
        echo "$1 exists on your filesystem."
        printf "Pulling $1\n"
        cd "$1" || exit
        git fetch
        git merge
        cd "$HOME" || exit
        printf "\n"
    fi
}

folders=("docs" "APA_Practica" "APA" "PAR" "fib" "dotfiles/dotfiles" "VC" "CAIM" "bitsXlaMarato")

cd "$HOME" || exit
for i in "${folders[@]}"
do
    pull "$i"
done
